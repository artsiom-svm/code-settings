{
    "extensions.autoUpdate": false,
    "editor.wordWrap": "wordWrapColumn",
    "files.exclude": {
        ".viceroy": true,
        "apollo-overrides": true,
        "release-info": true,
        "src/*/build": false,
        "build": true,
        "env": true,
        "packageInfo*": true,
        ".bemol": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.circuit": true,
        "**/*.data": true,
        "**/*.ipynb": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/*pb.go": true,
        "**/*pb.gw.go": true
    },
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.hover.delay": 100,
    "editor.lineNumbers": "relative",
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.smoothScrolling": true,
    "editor.stablePeek": true,
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "underline-thin",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.showSlider": "always",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.quickSuggestionsDelay": 5,
    "editor.suggest.localityBonus": true,
    "editor.suggest.shareSuggestSelections": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": true,
    "breadcrumbs.enabled": true,
    "workbench.editor.highlightModifiedTabs": true,
    "window.menuBarVisibility": "toggle",
    "window.restoreFullscreen": true,
    "git.autofetch": true,
    "C_Cpp.default.cppStandard": "c++14",
    "C_Cpp.default.cStandard": "c99",
    "color-highlight.matchWords": true,
    "color-highlight.markerType": "dot-before",
    "workbench.colorTheme": "Cobalt2",
    "editor.suggestSelection": "first",
    "editor.tokenColorCustomizations": {
        "[Cobalt2]": {
            "comments": "#d4922f"
        }
    },
    "editor.fontFamily": "Operator Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 22,
    "editor.lineHeight": 25,
    "editor.letterSpacing": 0.5,
    "editor.fontWeight": "500",
    "editor.cursorWidth": 5,
    "zenMode.hideLineNumbers": false,
    "files.associations": {
        "**/.i3/config": "i3",
        "**/i3/config": "i3",
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "python.languageServer": "Default",
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true,
        "**/target": true
    },
    "search.exclude": {
        "env": true,
        "src/*/build": true,
        "build": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/home/ANT.AMAZON.COM/artsiom/.vscode-oss/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    "[java]": {
        "editor.formatOnSave": true
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ]
    },
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python.formatting.blackArgs": [
        "--line-length",
        "119"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "window.zoomLevel": 0,
    "scm.inputFontSize": 15,
}
